<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import super_puper_mega_programmisty.blender.app.ScrollableDoubleField?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="super_puper_mega_programmisty.blender.app.BlenderController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadModel" text="Открыть"/>
                        <MenuItem mnemonicParsing="false" onAction="#saveModel" text="Сохранить"/>
                        <MenuItem mnemonicParsing="false" onAction="#clearScene" text="Очистить сцену"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Объект">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#selectNext" text="Выбрать следующий"/>
                        <MenuItem mnemonicParsing="false" onAction="#selectPrev" text="Выбрать предыдущий"/>
                        <Menu mnemonicParsing="false" text="Добавить">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#addCamera" text="Камера"/>
                                <MenuItem mnemonicParsing="false" onAction="#addLumination" text="Освещение"/>
                            </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#deleteObject" text="Удалить"/>
                        <MenuItem mnemonicParsing="false" onAction="#triangulate" text="Триангулировать"/>
                        <MenuItem mnemonicParsing="false" onAction="#recalculateNormals" text="Пересчитать нормали"/>
                        <MenuItem mnemonicParsing="false" onAction="#applyTexture" text="Наложить текстуру"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Камера">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#nextCamera" text="Следующая"/>
                        <MenuItem mnemonicParsing="false" onAction="#prevCamera" text="Предыдущая"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="180.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="objectLabel" prefHeight="30" text="Null" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Separator prefHeight="5"/>
                <Label prefHeight="30" text="Позиция" textAlignment="CENTER"/>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="15" text="X"/>
                        <ScrollableDoubleField fx:id="posX" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Y"/>
                        <ScrollableDoubleField fx:id="posY" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Z"/>
                        <ScrollableDoubleField fx:id="posZ" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
                    </children>
                </HBox>
                <Separator prefHeight="5" visible="false"/>
                <Label prefHeight="30" text="Вращение" textAlignment="CENTER"/>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="15" text="X"/>
                        <ScrollableDoubleField fx:id="rotX" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Y"/>
                        <ScrollableDoubleField fx:id="rotY" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Z"/>
                        <ScrollableDoubleField fx:id="rotZ" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
                    </children>
                </HBox>
                <Separator layoutX="10.0" layoutY="75.0" prefHeight="5" visible="false"/>
                <Label prefHeight="30" text="Размер" textAlignment="CENTER"/>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label prefWidth="15" text="X"/>
                        <ScrollableDoubleField fx:id="scaleX" alignment="CENTER" onAction="#updateScale" prefWidth="40" text="1"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Y"/>
                        <ScrollableDoubleField fx:id="scaleY" alignment="CENTER" onAction="#updateScale" prefWidth="40" text="1"/>
                        <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                        <Label prefWidth="15" text="Z"/>
                        <ScrollableDoubleField fx:id="scaleZ" alignment="CENTER" onAction="#updateScale" prefWidth="40" text="1"/>
                    </children>
                </HBox>
                <Separator prefHeight="20" visible="false"/>
                <CheckBox mnemonicParsing="false" text="Применять освещение" underline="true" onAction="#switchLumination" fx:id="luminationSwitch"/>
            </children>
        </VBox>
    </right>
    <center>
        <Canvas fx:id="canvas" height="400.0" width="600.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
