<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import mega_programmisty.blender.app.ScrollableDoubleField?>

<?import javafx.scene.paint.Color?>


<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/17.0.12"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label prefHeight="30" text="Позиция" textAlignment="CENTER"/>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <children>
                <Label prefWidth="15" text="X"/>
                <ScrollableDoubleField fx:id="posX" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Y"/>
                <ScrollableDoubleField fx:id="posY" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Z"/>
                <ScrollableDoubleField fx:id="posZ" alignment="CENTER" onAction="#updatePos" prefWidth="40"/>
            </children>
        </HBox>
        <Separator prefHeight="5" visible="false"/>
        <Label prefHeight="30" text="Вращение" textAlignment="CENTER"/>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <children>
                <Label prefWidth="15" text="X"/>
                <ScrollableDoubleField fx:id="rotX" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Y"/>
                <ScrollableDoubleField fx:id="rotY" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Z"/>
                <ScrollableDoubleField fx:id="rotZ" alignment="CENTER" onAction="#updateRotation" prefWidth="40"/>
            </children>
        </HBox>
        <Separator layoutX="10.0" layoutY="75.0" prefHeight="5" visible="false"/>
        <Label prefHeight="30" text="Размер" textAlignment="CENTER"/>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <children>
                <Label prefWidth="15" text="X"/>
                <ScrollableDoubleField fx:id="scaleX" alignment="CENTER" onAction="#updateScale" prefWidth="40"
                                       text="1"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Y"/>
                <ScrollableDoubleField fx:id="scaleY" alignment="CENTER" onAction="#updateScale" prefWidth="40"
                                       text="1"/>
                <Separator orientation="VERTICAL" prefWidth="10" visible="false"/>
                <Label prefWidth="15" text="Z"/>
                <ScrollableDoubleField fx:id="scaleZ" alignment="CENTER" onAction="#updateScale" prefWidth="40"
                                       text="1"/>
            </children>
        </HBox>

        <Separator prefHeight="15" visible="false"/>
        <CheckBox mnemonicParsing="false" fx:id="applyTextureBox" text="Применять текстуру"
                  onAction="#onApplyTextureChanged"/>
        <Separator prefHeight="20" visible="false"/>

        <ColorPicker fx:id="colorPicker" onAction="#onColorChanged">
            <value>
                <Color/>
            </value>
        </ColorPicker>
        <Separator prefHeight="10" visible="false"/>

        <Label text="blesk"/>
        <Slider majorTickUnit="2.0" max="12.0" minorTickCount="1" snapToTicks="true" fx:id="bleskSlider"
                onDragDetected="#onBleskSliderDrag" value="6"/>
        <Separator prefHeight="10" visible="false"/>

        <Label text="Прозрачность"/>
        <Slider majorTickUnit="0.001" max="1.0" minorTickCount="1" snapToTicks="true" fx:id="alphaSlider"
                onDragDetected="#onAlphaSliderDrag" value="1"/>
        <Separator prefHeight="15" visible="false"/>

        <Button mnemonicParsing="false" text="Применить текстуру" onAction="#applyTexture"/>
        <Separator prefHeight="10" visible="false"/>

        <Button mnemonicParsing="false" text="Пересчитать нормали" onAction="#recalculateNormals"/>
        <Separator prefHeight="10" visible="false"/>

        <Button mnemonicParsing="false" text="Триангулировать" onAction="#triangulate"/>
        <Separator prefHeight="10" visible="false"/>

        <Button mnemonicParsing="false" text="Сохранить оригинал" onAction="#saveOriginal"/>
        <Separator prefHeight="10" visible="false"/>

        <Button mnemonicParsing="false" text="Сохранить с изменениями" onAction="#saveChanged"/>
    </children>
</fx:root>
